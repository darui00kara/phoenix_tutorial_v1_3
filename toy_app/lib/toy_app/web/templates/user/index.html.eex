<h1>All users</h1>

<%= if !is_empty_list?(@users.entries) do %>

  <%= render ToyApp.Web.PaginationView, "page_link.html", conn: @conn, pages: @users %>

  <ul class="users">
    <%= for user <- @users.entries do %>
      <%= render "user.html", conn: @conn, user: user %>
    <% end %>
  </ul>

  <%= render ToyApp.Web.PaginationView, "page_link.html", conn: @conn, pages: @users %>

<% end %>
